<header class="stack__edit--header">
  <%= render partial: 'shared/header', locals: { title: @stack.title, color: 'orange' } %>
  <div>
    <%= link_to new_stack_flashcard_path(@stack), class: "button circle indigo" do %>
      <%= render partial: 'shared/icons/add' %>
    <% end %>
    <%= form_with model: @stack, method: :delete do |f| %>
      <button class="button circle indigo position__fixed--bottom-right"> <%= render partial: 'shared/icons/trash' %> </button>
    <% end %>
  </div>
</header>

<div class="stack__edit--container">
  <% if @flashcards.any? %>
    <% @flashcards.each do |flashcard| %>
      <div class="stack__edit--card">
        <h2><%= flashcard.question %></h2>
        <div>
          <%= link_to stack_flashcard_path(@stack, flashcard), method: :delete, class: "edit-link" do %>
            <%= render partial: 'shared/icons/trash' %>
          <% end %>
          <%= link_to edit_stack_flashcard_path(@stack, flashcard), class: "edit-link" do %>
            <%= render partial: 'shared/icons/edit' %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>Noch keine Fragen vorhanden.</p>
  <% end %>
</div>
