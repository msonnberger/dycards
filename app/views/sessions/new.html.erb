<div class='login'>
  <header>
    <h1>Willkommen bei Dycards!</h1>
    <%= image_pack_tag 'logo.svg' %>
  </header>

  <%= form_with url: login_path, local: true do |f| %>

    <div>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <%= submit_tag 'Log In' %>
    <%= link_to 'Sign Up', signup_path %>
  <% end %>
</div>
