<%= render partial: 'shared/header', locals: { title: 'Profil bearbeiten', color: 'indigo' } %>

<%= form_with model: current_user, method: :patch do |f|%>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :new_password %>
    <%= f.password_field :new_password %>
  </div>

  <div>
    <%= f.label :new_password_confirmation %>
    <%= f.password_field :new_password_confirmation %>
  </div>

  <%= f.submit 'Speichern', data: { disable_with: false } %>
<% end %>
